<table class="details">
    <tr>
        <th style="width: 70pt;">
            [% l('Type:') %]
        </th>
        <td>
            <a href="[%- c.uri_for(doc_link(moderation.Name)).replace(' ', '_') _ "_Edit" -%]">
                [%- moderation.Name -%]
            </a>
        </td>
    </tr>
    [%- IF moderation.artist AND moderation.show_artist -%]
        <tr>
            <th>
                [% l('Artist:') %]
            </th>
            <td>
                [%- entity_link(moderation.artist) -%]
            </td>
        </tr>
    [%- END -%]
    [%- IF moderation.release -%]
        <tr>
            <th>
                [% l('Release:') %]
            </th>
            <td>
                [%- entity_link(moderation.release) -%]
            </td>
        </tr>
    [%- END -%]
    [%- IF moderation.track -%]
        <tr>
            <th>
                [% l('Track:') %]
            </th>
            <td>
                [%- entity_link(moderation.track) -%]
            </td>
        </tr>
    [%- END -%]
    [%- IF moderation.label -%]
        <tr>
            <th>
                [% l('Label:') %]
            </th>
            <td>
                [%- entity_link(moderation.label) -%]
            </td>
        </tr>
    [%- END -%]
</table>
